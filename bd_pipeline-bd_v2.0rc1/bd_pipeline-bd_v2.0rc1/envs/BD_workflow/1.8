proc ModulesHelp { } {
        global dotversion

        puts stderr "\tAdds '/data/software/conda_envs/BD_workflow/bin' to your PATH environment variable"
        puts stderr "\tto your PATH environment variable.  This allows you to"
        puts stderr "\trun executables from the /data/software/conda_envs/BD_workflow/bin."
}

module-whatis   "adds '/data/software/conda_envs/BD_workflow/bin' to your PATH environment variable"

prepend-path    PATH    /data/software/conda_envs/BD_workflow/bin

prepend-path -d " " CFLAGS "-I/data/software/conda_envs/BD_workflow/include"
prepend-path -d " " CPPFLAGS "-I/data/software/conda_envs/BD_workflow/include"

prepend-path -d " " LDFLAGS "-L/data/software/conda_envs/BD_workflow/lib"
prepend-path    LD_RUN_PATH /data/software/conda_envs/BD_workflow/lib
prepend-path    LD_LIBRARY_PATH /data/software/conda_envs/BD_workflow/lib
prepend-path    PYTHONPATH /data/software/conda_envs/BD_workflow/lib/python3.7/site-packages
